<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" prefHeight="310.0" prefWidth="320.0" spacing="20.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uady.reportecsv.SignInController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextField fx:id="userField" promptText="Usuario"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>
    <PasswordField fx:id="confirmField" promptText="Confirmar contraseña"/>
    <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="120.0"
           prefWidth="280.0"
           text="La contraseña debe tener mayúsculas, minúsculas y números. La longitud debe ser entre 8 y 16 caractéres y no se permiten espacios."
           textAlignment="JUSTIFY" wrapText="true"/>
    <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#onCancelAction" text="Cancelar"/>
        <Button fx:id="acceptButton" defaultButton="true" mnemonicParsing="false" onAction="#onAcceptAction" text="Aceptar"/>
    </HBox>
</VBox>
